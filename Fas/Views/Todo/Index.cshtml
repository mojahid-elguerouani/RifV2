@model List<Todo>
@inject FasDemo.Services.App.ICommon _app;
@using FasDemo.ViewModels;
@using Newtonsoft.Json;
@{
    string controller = this.ViewContext.RouteData.Values["controller"].ToString();
    ViewData["Title"] = "Todo";
    string period = this.Context.Request.Query["period"].ToString();
    if (String.IsNullOrEmpty(period))
    {
        period = DateTime.Now.ToString("yyyy-MM");
    }

    TodoSummary todoSummary = _app.GetTodoSummaryByPeriod(period);
    ChartDoughnut todoChart = _app.GetTodoDoughnutByPeriod(period);

}

<!-- [ Main Content ] start -->
<section class="pcoded-main-container">
    <div class="pcoded-wrapper">
        <div class="pcoded-content">
            <div class="pcoded-inner-content">
                <div class="main-body">
                    <div class="page-wrapper">
                        <div class="accordion" id="accordionMain">
                            <div class="card">
                                <div class="card-header" id="headingOne">
                                    <h5 class="mb-0">
                                        <a href="#!" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                            التحليل
                                        </a>
                                    </h5>
                                </div>
                                <div id="collapseOne" class=" card-body collapse show" aria-labelledby="headingOne" data-parent="#accordionMain">
                                    <div class="row">
                                        <div class="col-md-5 mb-4">
                                            <div class="card">
                                                <div class="card-body">
                                                    <h4 class="card-title mb-4">Todo Type</h4>
                                                    <div class="chart-container doughnut">
                                                        <canvas id="doughnutChart" height="250" width="250"></canvas>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-7 mb-4">
                                            <div class="row">
                                                <div class="col-md-6 col-xl-6 mb-3">
                                                    <div class="card">
                                                        <div class="card-block ticket-visitor">
                                                            <h3 class="mb-2">@todoSummary.Done</h3>
                                                            <h5 class="text-muted f-w-300 mb-4">Done</h5>
                                                            <div class="progress">
                                                                <div class="progress-bar progress-c-theme2" role="progressbar" style="width: @todoSummary.DonePercentage%;height:13px;" aria-valuenow="@todoSummary.DonePercentage" aria-valuemin="0" aria-valuemax="100">@todoSummary.DonePercentage%</div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-xl-6 mb-3">
                                                    <div class="card">
                                                        <div class="card-block ticket-visitor">
                                                            <h3 class="mb-2">@todoSummary.NotDone</h3>
                                                            <h5 class="text-muted f-w-300 mb-4">Not Done</h5>
                                                            <div class="progress">
                                                                <div class="progress-bar progress-c-theme2" role="progressbar" style="width: @todoSummary.NotDonePercentage%;height:13px;" aria-valuenow="@todoSummary.NotDonePercentage" aria-valuemin="0" aria-valuemax="100">@todoSummary.NotDonePercentage%</div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-xl-6">
                                                    <div class="card">
                                                        <div class="card-block ticket-visitor">
                                                            <h3 class="mb-2">@todoSummary.OneDay</h3>
                                                            <h5 class="text-muted f-w-300 mb-4">One Day</h5>
                                                            <div class="progress">
                                                                <div class="progress-bar progress-c-theme2" role="progressbar" style="width: @todoSummary.OneDayPercentage%;height:13px;" aria-valuenow="@todoSummary.OneDayPercentage" aria-valuemin="0" aria-valuemax="100">@todoSummary.OneDayPercentage%</div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-xl-6">
                                                    <div class="card">
                                                        <div class="card-block ticket-visitor">
                                                            <h3 class="mb-2">@todoSummary.MoreThanOne</h3>
                                                            <h5 class="text-muted f-w-300 mb-4">More Than One</h5>
                                                            <div class="progress">
                                                                <div class="progress-bar progress-c-theme2" role="progressbar" style="width: @todoSummary.MoreThanOnePercentage%;height:13px;" aria-valuenow="@todoSummary.MoreThanOnePercentage" aria-valuemin="0" aria-valuemax="100">@todoSummary.MoreThanOnePercentage%</div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="pcoded-content">
            <div class="pcoded-inner-content">
             
                <div class="page-header">
                    <div class="page-block">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="dropdown d-inline">
                                    <button class="btn drp-icon btn-rounded btn-primary dropdown-toggle" type="button"
                                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="feather icon-grid"></i>
                                    </button>
                                    <div class="dropdown-menu" style="position: absolute;will-change: transform;top: -2px;right: 5px;transform: translate3d(10px, 31px, 0px);">
                                        <h6 class="dropdown-header">الاعدادات</h6>
                                        <a class="dropdown-item" href="~/Todo/TodoTypeIndex">Todo Type</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-form-label col-sm-2 text-sm-right">الفترة</label>
                                    <div class="col-sm-6">
                                        <input type="text" id="Period" name="Period" class="datepickeryearmonth form-control">
                                    </div>
                                    <div class="btn-group col-sm-4" role="group" aria-label="First group">
                                        <a href="#" class="btn btn-primary" onclick="onRefresh()">
                                            <i class="mdi mdi-recycle"></i> تحديث
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row align-items-center">
                            <div class="col-md-12">
                                <div class="page-header-title">
                                    <h3 class="m-b-10">@ViewData["Title"] @(!String.IsNullOrEmpty(period) ? "  لفترة" + period : "")</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
             
                <div class="main-body">
                    <div class="page-wrapper">
                        <!-- [ Main Content ] start -->
                        <div class="row">
                            <div class="col-sm-12">
                                @await Html.PartialAsync(PartialView.StatusMessage, TempData[StaticString.StatusMessage])
                            </div>
                            
                            <div class="col-sm-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5>List of todo</h5>
                                        <div class="card-header-left">
                                            <div class="btn-group card-option">
                                                <form action="/Todo/Form">
                                                    <button class="btn drp-icon btn-rounded btn-primary" type="submit">
                                                        <i class="feather icon-plus"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-block">
                                        <div class="table-responsive">
                                            <table id="responsive-table-model" class="display table nowrap table-striped table-hover" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th width="5%"></th>
                                                        <th width="5%"></th>
                                                        <th width="20%">Todo Item</th>
                                                        <th width="20%">Type</th>
                                                        <th width="20%">نيابة </th>
                                                        <th width="15%">Start</th>
                                                        <th width="15%">Is Done</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <a href="/Todo/Form/@item.TodoId?period=@period"><i class="feather icon-edit"></i></a>
                                                            </td>
                                                            <td>
                                                                <a href="/Todo/Delete/@item.TodoId?period=@period"><i class="feather icon-trash"></i></a>
                                                            </td>
                                                            <td><span style="text-decoration-line:@(item.IsDone ? "line-through" : "none")">@item.TodoItem</span></td>
                                                            <td>@item.TodoType.Name</td>
                                                            <td>@(item.OnBehalf.FirstName + " " + item.OnBehalf.LastName)</td>
                                                            <td>@item.StartDate.ToString("yyyy-MM-dd")</td>
                                                            <td>
                                                                <div class="switch d-inline m-r-10">
                                                                    <input type="checkbox" @(item.IsDone ? "checked" : "")>
                                                                    <label class="cr"></label>
                                                                </div>
                                                            </td>

                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            @*<div class="col-sm-12">
                                <div class="card">
                                    <div class="card-block">
                                        <h4 class="card-title mb-4"><i class="feather icon-book md-18 mr-2 btn-outline-primary"></i> Quick Guide</h4>
                                        <blockquote class="blockquote">
                                            <p class="mb-3">
                                                Todo module will give you a tools for managing todo items. Create and edit todo item and then marking the todo item as done or not done activity.
                                            </p>
                                            <h5 class="card-title mb-4">Todo Features:</h5>
                                            <ul class="list list-unstyled mb-3">
                                                <li><i class="feather icon-check-circle btn-outline-primary"></i> Create / Edit Todo</li>
                                                <li><i class="feather icon-check-circle btn-outline-primary"></i> Setup and Manage Todo Type</li>
                                                <li><i class="feather icon-check-circle btn-outline-primary"></i> Todo Completion Marking</li>
                                            </ul>
                                            <h5><i class="feather icon-zap btn-outline-warning"></i> Tips</h5>
                                            <p>
                                                Select and change period to navigate data between periods.
                                            </p>
                                        </blockquote>

                                    </div>
                                </div>                                
                            </div>*@

                        </div>
                        <!-- [ Main Content ] end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- [ Main Content ] end -->


@section Styles{

}

@section Scripts {



    <script type="text/javascript">

        $(document).ready(function () {

        });

        //Doughnut Chart
        $(function () {
            var doughnutChart = {
                data: {
                    labels: @Html.Raw(JsonConvert.SerializeObject(todoChart.Labels)),
                    datasets: [{
                        label: 'Doughnut chart',
                        data: @Html.Raw(JsonConvert.SerializeObject(todoChart.Data)),
                        backgroundColor: @Html.Raw(JsonConvert.SerializeObject(todoChart.Colors)),
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    legend: {
                        position: "top"
                    },
                    cutoutPercentage: 50
                }
            }
            chart("doughnutChart", "doughnut", doughnutChart.data, doughnutChart.options);
        });

        function onRefresh() {
            if ($('#Period').val() !== '') {
                location.href = '/@controller/Index?period=' + $('#Period').val();
            } else {
                notify('Please select period first!', 'danger');
            }

        }

    </script>
}



