@model Employee
@{
    string controller = this.ViewContext.RouteData.Values["controller"].ToString();
    string action = this.ViewContext.RouteData.Values["action"].ToString();
    string modelName = "Employee";
    ViewData["Title"] = modelName + " Delete";
}

<!-- [ Main Content ] start -->
<section class="pcoded-main-container">
    <div class="pcoded-wrapper">
        <div class="pcoded-content">
            <div class="pcoded-inner-content">
                <!-- [ breadcrumb ] start -->
                <div class="page-header">
                    <div class="page-block">
                        <div class="row">
                            <div class="col-md-12">
                                <a href="/@controller/Index" class="btn drp-icon btn-rounded btn-primary dropdown-toggle">
                                    <i class="feather icon-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                        <div class="row align-items-center">
                            <div class="col-md-12">
                                <div class="page-header-title">
                                    <h3 class="m-b-10">@ViewData["Title"]</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- [ breadcrumb ] end -->
                <div class="main-body">
                    <div class="page-wrapper">
                        <!-- [ Main Content ] start -->
                        <div class="row">
                            <div class="col-sm-12">
                                @await Html.PartialAsync(PartialView.StatusMessage, TempData[StaticString.StatusMessage])
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <form asp-controller="@controller" asp-action="Submit@(action)" method="post">

                                    <article class="card mb-4">
                                        <div class="card-header">
                                            <h4 class="card-title mb-0">Delete @modelName؟ هذه العملية لا رجوع فيها </h4>
                                        </div>
                                    </article>

                                    <article class="card mb-4">
                                        <div class="card-header">
                                            <h4 class="card-title mb-0">Basic Info</h4>
                                        </div>
                                        <div class="card-body">
                                            <input type="hidden" asp-for="EmployeeId" />
                                            <div class="row">
                                                <div class="col-4">
                                                    <div class="form-group">
                                                        <label asp-for="FirstName"></label>
                                                        <input disabled asp-for="FirstName" class="form-control" />
                                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="form-group">
                                                        <label asp-for="LastName"></label>
                                                        <input disabled asp-for="LastName" class="form-control" />
                                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="form-group">
                                                        <label asp-for="Gender"></label>
                                                        <select disabled asp-for="Gender" class="select2 form-control" asp-items="ViewBag.Gender"></select>
                                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-6">
                                                    <div class="form-group">
                                                        <label asp-for="DateOfBirth"></label>
                                                        <input disabled type="text" id="DateOfBirth" name="DateOfBirth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" class="datepicker form-control" data-val="true" data-val-required="The DateOfBirth field is required.">
                                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <div class="form-group">
                                                        <label asp-for="PlaceOfBirth"></label>
                                                        <input disabled asp-for="PlaceOfBirth" class="form-control" />
                                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                        <span asp-validation-for="PlaceOfBirth" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-4">
                                                    <div class="form-group">
                                                        <label asp-for="MaritalStatus"></label>
                                                        <select disabled asp-for="MaritalStatus" class="select2 form-control" asp-items="ViewBag.MaritalStatus"></select>
                                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                        <span asp-validation-for="MaritalStatus" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="form-group">
                                                        <label asp-for="Email"></label>
                                                        <input disabled asp-for="Email" class="form-control" />
                                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                        <span asp-validation-for="Email" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="form-group">
                                                        <label asp-for="Phone"></label>
                                                        <input disabled asp-for="Phone" class="form-control" />
                                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label asp-for="Address1"></label>
                                                <input disabled asp-for="Address1" class="form-control" />
                                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                <span asp-validation-for="Address1" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Address2"></label>
                                                <input disabled asp-for="Address2" class="form-control" />
                                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                <span asp-validation-for="Address2" class="text-danger"></span>
                                            </div>

                                            <div class="row">
                                                <div class="col-4">
                                                    <div class="form-group">
                                                        <label asp-for="City"></label>
                                                        <input disabled asp-for="City" class="form-control" />
                                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                        <span asp-validation-for="City" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="form-group">
                                                        <label asp-for="StateProvince"></label>
                                                        <input disabled asp-for="StateProvince" class="form-control" />
                                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                        <span asp-validation-for="StateProvince" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="form-group">
                                                        <label asp-for="ZipCode"></label>
                                                        <input disabled asp-for="ZipCode" class="form-control" />
                                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>


                                            <div class="form-group">
                                                <label asp-for="Country"></label>
                                                <input disabled asp-for="Country" class="form-control" />
                                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                <span asp-validation-for="Country" class="text-danger"></span>
                                            </div>
                                        </div>

                                    </article>

                                    <article class="card mb-4">
                                        <div class="card-header">
                                            <h4 class="card-title mb-0">Staff Info</h4>
                                        </div>
                                        <div class="card-body">
                                            <div class="form-group">
                                                <label asp-for="EmployeeIDNumber"></label>
                                                <input disabled asp-for="EmployeeIDNumber" class="form-control" />
                                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                <span asp-validation-for="EmployeeIDNumber" class="text-danger"></span>
                                            </div>

                                            <div class="row">
                                                <div class="col-4">
                                                    <div class="form-group">
                                                        <label asp-for="DesignationId"></label>
                                                        <select disabled asp-for="DesignationId" class="select2 form-control" asp-items="ViewBag.Designation"></select>
                                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                        <span asp-validation-for="DesignationId" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="form-group">
                                                        <label asp-for="DepartmentId"></label>
                                                        <select disabled asp-for="DepartmentId" class="select2 form-control" asp-items="ViewBag.Department"></select>
                                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="form-group">
                                                        <label asp-for="SupervisorId"></label>
                                                        <select disabled asp-for="SupervisorId" class="select2 form-control" asp-items="ViewBag.Supervisor"></select>
                                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                        <span asp-validation-for="SupervisorId" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>



                                            <div class="form-group">
                                                <label asp-for="JoiningDate"></label>
                                                <input disabled type="text" id="JoiningDate" name="JoiningDate" value="@Model.JoiningDate.ToString("yyyy-MM-dd")" class="datepicker form-control" data-val="true" data-val-required="The JoiningDate field is required.">
                                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                <span asp-validation-for="JoiningDate" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="LeavingDate"></label>
                                                <input disabled type="text" id="LeavingDate" name="LeavingDate" value="@(Model.LeavingDate.HasValue ? Model.LeavingDate.Value.ToString("yyyy-MM-dd") : "")" class="datepicker form-control">
                                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                            </div>

                                        </div>
                                    </article>

                                    <article class="card mb-4">
                                        <div class="card-header">
                                            <h4 class="card-title mb-0">Salary Info</h4>
                                        </div>
                                        <div class="card-body">
                                            <div class="form-group">
                                                <label asp-for="BasicSalary"></label>
                                                <input disabled asp-for="BasicSalary" class="form-control" />
                                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                <span asp-validation-for="BasicSalary" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="UnpaidLeavePerDay"></label>
                                                <input disabled asp-for="UnpaidLeavePerDay" class="form-control" />
                                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                <span asp-validation-for="UnpaidLeavePerDay" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="BenefitTemplateId"></label>
                                                <select disabled asp-for="BenefitTemplateId" class="select2 form-control" asp-items="ViewBag.BenefitTemplate"></select>
                                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                <span asp-validation-for="BenefitTemplateId" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </article>

                                    <article class="card mb-4">
                                        <div class="card-header">
                                            <h4 class="card-title mb-0">Bank Account Info</h4>
                                        </div>
                                        <div class="card-body">
                                            <div class="form-group">
                                                <label asp-for="AccountTitle"></label>
                                                <input disabled asp-for="AccountTitle" class="form-control" />
                                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                <span asp-validation-for="AccountTitle" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="BankName"></label>
                                                <input disabled asp-for="BankName" class="form-control" />
                                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                <span asp-validation-for="BankName" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="AccountNumber"></label>
                                                <input disabled asp-for="AccountNumber" class="form-control" />
                                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                <span asp-validation-for="AccountNumber" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="SwiftCode"></label>
                                                <input disabled asp-for="SwiftCode" class="form-control" />
                                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                <span asp-validation-for="SwiftCode" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </article>

                                    <article class="card mb-4">
                                        <div class="card-header">
                                            <h4 class="card-title mb-0">System User Account Info</h4>
                                        </div>
                                        <div class="card-body">
                                            <div class="form-group">
                                                <label asp-for="SystemUserId"></label>
                                                <select disabled asp-for="SystemUserId" class="select2 form-control" asp-items="ViewBag.SystemUser"></select>
                                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                                <span asp-validation-for="SystemUserId" class="text-danger"></span>
                                            </div>
                                        </div>

                                    </article>
                                    <article class="card mb-4">
                                        <div class="card-header">
                                            <button type="submit" class="btn btn-danger">حذف</button>
                                        </div>
                                    </article>
                                </form>
                            </div>
                        </div>
                        <!-- [ Main Content ] end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- [ Main Content ] end -->


@section Styles{

}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}